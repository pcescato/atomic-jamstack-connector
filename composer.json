{
	"name": "ajc-bridge/ajc-bridge",
	"description": "Flexible WordPress publishing with 5 strategies: WordPress-only, WordPress+dev.to syndication, GitHub headless, dev.to headless, or dual GitHub+dev.to",
	"type": "wordpress-plugin",
	"license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "Pascal CESCATO",
			"homepage": "https://github.com/pascalcescato"
		}
	],
	"require": {
		"php": ">=8.1",
		"woocommerce/action-scheduler": "^3.7",
		"intervention/image": "^3.11",
		"league/html-to-markdown": "^5.1"
	},
	"autoload": {
		"psr-4": {
			"AjcBridge\\": "core/",
			"AjcBridge\\Adapters\\": "adapters/",
			"AjcBridge\\Admin\\": "admin/"
		}
	},
	"config": {
		"optimize-autoloader": true,
		"classmap-authoritative": false,
		"preferred-install": "dist",
		"sort-packages": true
	}
}
